<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_light_focused"
    tools:context="com.example.no24519.projectchat.ProfileActivity">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/profile_displayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Display Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_displayName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/profile_city_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/defualt_status" />

    <TextView
        android:id="@+id/profile_interest_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_city_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/defualt_status" />

    <TextView
        android:id="@+id/profile_emotional_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_interest_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="這是狀態" />

    <TextView
        android:id="@+id/profile_introduction_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_emotional_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="這是狀態" />

    <TextView
        android:id="@+id/profile_totalFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_send_req_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:text="Total Friends"
        android:visibility="invisible" />

    <Button
        android:id="@+id/profile_send_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_introduction_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/LightSkyBlue"
        android:padding="10dp"
        android:text="送出好友邀請" />

    <Button
        android:id="@+id/profile_decline_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/profile_send_req_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/LightSkyBlue"
        android:padding="10dp"
        android:text="取消交友邀請" />

</RelativeLayout>
